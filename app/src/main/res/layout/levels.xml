<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/level_path"
    xmlns:android="http://schemas.android.com/apk/res/android">


   <TextView
       android:id="@+id/scoreLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.872"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.023"></TextView>


   <ImageView
       android:id="@+id/imageView"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_centerHorizontal="true"
       android:layout_toRightOf="@id/scoreLabel"
       android:src="@drawable/coin1"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.958"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.022"></ImageView>

   <ImageButton
       android:id="@+id/level4b"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:background="@null"
       android:src="@drawable/level4_on_press_b"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.219"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.102"></ImageButton>

   <ImageButton
       android:id="@+id/level4g"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:background="@null"
       android:src="@drawable/level4_on_press_g"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.219"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.102"></ImageButton>

   <ImageButton
       android:id="@+id/level1"
       android:layout_width="97dp"
       android:layout_height="97dp"
       android:src="@drawable/level1_on_press"
       android:scaleType="fitXY"
       android:background="@null"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.458"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.915"></ImageButton>

   <ImageButton
       android:id="@+id/level2b"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:src="@drawable/level2_on_press_b"
       android:background="@null"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.368"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.585"></ImageButton>

   <ImageButton
       android:id="@+id/level2g"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:src="@drawable/level2_on_press_g"
       android:visibility="invisible"
       android:background="@null"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.368"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.585"></ImageButton>


   <ImageButton
       android:id="@+id/level3b"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:background="@null"
       android:src="@drawable/level3_on_press_b"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.53"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.361"></ImageButton>

   <ImageButton
       android:id="@+id/level3g"
       android:layout_width="87dp"
       android:layout_height="87dp"
       android:background="@null"
       android:src="@drawable/level3_on_press_g"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.53"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.361"></ImageButton>

   <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"></ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>